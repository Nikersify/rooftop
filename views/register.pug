extends base

block title
	title register | rooftop

block content
	.container.container-prime
		.well
			form(method='post')
				h4.text-center register to rooftop
				.form-group
					label(for='login') desired login
					input#login.form-control(type='text' name='login')
				.form-group
					label(for='passwd1') password
					input#passwd1.form-control(type='password' name='passwd1')
				.form-group
					label(for='passwd2') repeat password
					input#passwd2.form-control(type='password' name='passwd2')

				for msg, type in messages
					- var _class = 'muted'
					case type
						when 'error'
							- _class = 'danger'
						when 'info'
							- _class = 'primary'
					p.help-block
						span(class='text-' + _class) #{msg}

				.form-group
					button.btn.btn-default(type='submit') Submit
				a(href='/auth/login') but I already have an account!
